<%- include("inc/header") %>
<div class="container py-md-5 container--narrow">
  <%- include("inc/flash") %>
  <a class="small font-weight-bold" href="/profile/<%= user.username %>">&laquo; Back to Profile</a>
  <form class="mt-3" action="" method="POST" novalidate>
    <div class="form-group">
      <label for="field-username" class="text-muted mb-1"><small>Username</small></label>
      <input required name="username" id="field-username" class="form-control form-control-lg body-content" type="text" placeholder="" value="<%= userDoc.username %>" autocomplete="off" />
    </div>
    <div class="form-group">
      <label for="field-email" class="text-muted mb-1"><small>Email</small></label>
      <input required name="email" id="field-email" class="form-control form-control-lg body-content" type="text" placeholder="" value="<%= userDoc.email %>" autocomplete="off" />
    </div>

    <input type="hidden" name="_csrf" value="<%= csrf %>" />
    <button class="btn btn-primary">Update Profile</button>
  </form>
</div>

<%- include("inc/footer") %>
