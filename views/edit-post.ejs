<%- include("inc/header") %>
<div class="container py-md-5 container--narrow">
  <%- include("inc/flash") %>
  <a class="small font-weight-bold" href="/post/<%= post._id %>">&laquo; Back to post</a>
  <form class="mt-3" action="/post/<%= post._id %>/edit" method="POST" novalidate>
    <div class="form-group">
      <label for="post-title" class="text-muted mb-1"><small>Title</small></label>
      <input required name="title" id="post-title" class="form-control form-control-lg form-control-title" type="text" placeholder="" value="<%= post.title %>" autocomplete="off" />
    </div>

    <div class="form-group">
      <label for="post-body" class="text-muted mb-1"><small>Body Content</small></label>
      <textarea required name="body" id="post-body" class="body-content tall-textarea form-control" type="text"><%= post.body %></textarea>
    </div>
    <input type="hidden" name="_csrf" value="<%= csrf %>" />
    <button class="btn btn-primary">Update</button>
  </form>
</div>

<%- include("inc/footer") %>
